// Crabada Defense - Milestone 1 Skeleton

const canvas = document.getElementById('game-canvas');
const ctx = canvas.getContext('2d');

// Dummy level data for testing map drawing
const mapGrid = {
  width: 12,
  height: 20,
  tileSize: 45,
};

function drawGrid() {
  ctx.clearRect(0,0,canvas.width,canvas.height);
  ctx.strokeStyle = "#ffffff33";
  for (let x = 0; x <= mapGrid.width; x++) {
    ctx.beginPath();
    ctx.moveTo(x * mapGrid.tileSize, 0);
    ctx.lineTo(x * mapGrid.tileSize, mapGrid.height * mapGrid.tileSize);
    ctx.stroke();
  }
  for (let y = 0; y <= mapGrid.height; y++) {
    ctx.beginPath();
    ctx.moveTo(0, y * mapGrid.tileSize);
    ctx.lineTo(mapGrid.width * mapGrid.tileSize, y * mapGrid.tileSize);
    ctx.stroke();
  }
}

// Main game loop
function gameLoop() {
  drawGrid();
  requestAnimationFrame(gameLoop);
}

gameLoop();
console.log("ðŸš€ Crabada Defense initialized - Milestone 1 loaded.");